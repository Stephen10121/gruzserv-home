                        <li>Socket.io</li>
                        <li>Cloudflare</li>
                        <li>Nodejs</li>
                        <li>Raspberry Pi</li>
                        <li>Linux</li>
                        <li>TypeORM</li>
                        <li>Apollo</li>
                        <li>Sqlite</li>
                    </ul>
                </div>
            </div>
        </section>
        <section id="contact">
            <div class="contact-text-part">
                <h3>Contact Me</h3>
                <form id="sendForm">
                    <input type="email" placeholder="Email" required>
                    <textarea cols="30" rows="10" placeholder="What" required></textarea>
                    <button type="submit">Send</button>
                </form>
            </div>
            <div class="contact-img-part">
                <img src="contact.svg" alt="phone img">
            </div>
        </section>
        <section id="ending">
            <a href="#section1">Top</a>
            <a href="#about">About</a>
            <a href="#contact">Contact</a>
        </section>
    </main>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity=
        "sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" 
        crossorigin="anonymous">
    </script>
    <script>
        const sendMessage = (e) => {
            e.preventDefault();
            const data = {
                email: e.target[0].value,
                what: e.target[1].value
            }
            $.post("/contact", data, (data, status) => {
                if (status === "success") {
                    alert(data.msg);
                } else {
                    alert("Error sending message");
                }
            });
        }

        document.querySelector("#sendForm").addEventListener("submit", (e) => sendMessage(e));
    </script>
</body>
</html>
